<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.demo.station.mapper.WeatherLatestDataMapper">
    <resultMap id="BaseResultMap" type="com.demo.station.entity.WeatherEntity">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="city_code" property="cityCode" jdbcType="VARCHAR"/>
        <result column="temperature" property="temperature" jdbcType="FLOAT"/>
        <result column="humidity" property="humidity" jdbcType="FLOAT"/>
        <result column="pressure" property="pressure" jdbcType="FLOAT"/>
        <result column="create_time" property="createTime" jdbcType="FLOAT"/>
        <result column="temperature" property="temperature" jdbcType="TIMESTAMP"/>
    </resultMap>

    <delete id="deleteAll">
        delete
        from w_latest_data
    </delete>

    <insert id="insert" parameterType="com.demo.station.entity.WeatherEntity">
        insert into w_latest_data(city_code, temperature, humidity, pressure, create_time)
        values (#{latestData.cityCode}, #{latestData.temperature}, #{latestData.humidity}, #{latestData.pressure},
                #{latestData.createTime})
    </insert>

    <select id="selectAll" resultMap="BaseResultMap">
        select * from w_latest_data
    </select>


</mapper>